.devise-body
  %h2.devise-body__title Log in
  .devise-body__right
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "devise_field"
      .field
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password", class: "devise_field"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "Log in"
    = render "devise/shared/links"
